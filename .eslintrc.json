{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "double"],
    "space-before-function-paren": ["error", {
      "asyncArrow": "always",
      "named": "never",
      "anonymous": "never"
    }]
  }
}
